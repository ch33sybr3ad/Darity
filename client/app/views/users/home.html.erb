<section class="container">

<div class="video-container">
  <div class="hero-unit hero-wrapper embed-responsive embed-responsive-16by9">
    <video id="video" poster="" autoplay loop class="embed-responsive-item">
      <source src="https://a0.muscache.com/airbnb/static/London-P1-1.mp4" type="video/mp4">
      <source src="https://a0.muscache.com/airbnb/static/London-P1-0.webm" type="video/ogg">
    </video>
  </div>
</div>

<div class="header-text">
  <h1>Welcome to Darity</h1>
  <div class= "Log In">
    <h1>Log in</h1>
      <%= form_for(@user, url: login_path) do |f| %>
      <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control' %>

        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control' %>

        <%= f.submit "Log in", class: "btn btn-primary" %>
    <% end %>
  </div>

  <p>New User? <%= link_to "Sign Up Here", new_user_path %></p>
</div>  

</section>

