<section class="container">

  <div class="video-container">
    <div class="hero-unit hero-wrapper embed-responsive embed-responsive-16by9">
      <video id="video" poster="" autoplay loop class="embed-responsive-item">
        <source src="https://a0.muscache.com/airbnb/static/London-P1-1.mp4" type="video/mp4">
        <source src="https://a0.muscache.com/airbnb/static/London-P1-0.webm" type="video/ogg">
      </video>
    </div>
  </div>

  <div class="header-text">
    <h1>Welcome to Darity</h1>
  </div>

  <% if !current_user %>
    <div class= "login-area">
      <h1>Log in</h1>
      <%= bootstrap_form_for @user, url: login_path do |f| %>
      <%= f.email_field :email %>
      <%= f.password_field :password %>
      <%= f.submit "Log in", class: "btn btn-primary" %>
      <% end %>
      <div class= "signup-link">
        <p>New User? <%= link_to "Sign Up Here", new_user_path %></p>
      </div>
    </div>

    <div class= "signup-area" style="display:none">

      <h1>Sign Up</h1>
      <%= bootstrap_form_for @user do |f| %>
      <%= f.text_field :username %>
      <%= f.email_field :email %>
      <%= f.password_field :password, id: "signup-password"%>
      <%= f.password_field :password_confirm, id: "signup-password-confirm"%>
      <div class="invalid-sign-up alert alert-danger" style='display:none'></div>
      <%= f.submit "Sign Up", class: "btn btn-primary" %>
      <% end %>
      <div class="login-link">
        <p>Already have an account? <%= link_to "Log In Here", home_path %></p>
      </div>
    </div>
  <% end %>
</section>

